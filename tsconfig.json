{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "outDir": "./build",
    "rootDir": "./src",
    "useDefineForClassFields": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts", "./src/examples"]
}
